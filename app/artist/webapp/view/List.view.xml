<mvc:View
  controllerName="apm.artist.controller.List"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">

  <Page title="Artists" class="sapUiContentPadding">
    <subHeader>
      <Toolbar>
        <SearchField
          id="search"
          width="100%"
          placeholder="Search artist name..."
          liveChange="onSearch"
          search="onSearchSubmit" />

        <ToolbarSeparator/>

        <Button
          text="Filter/Sort"
          icon="sap-icon://filter"
          type="Transparent"
          press="onOpenViewSettings" />
          <Button text="Add Artist" icon="sap-icon://add" type="Emphasized" press="onOpenAddArtist"/>

      </Toolbar>
    </subHeader>

    <content>
      <List
        id="artistList"
        items="{/Artists}"
        growing="true"
        growingScrollToLoad="true"
        mode="None"
        itemPress="onItemPress">

        <items>
          <CustomListItem type="Active">
            <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%" class="sapUiSmallMargin">
              <VBox>
                <Title text="{name}" level="H4"/>
                <Text text="{= ${genre} + ' â€¢ ' + ${country} }"/>
              </VBox>

              <VBox alignItems="End">
                <ObjectNumber number="{popularityScore}" unit="Popularity" emphasized="true"/>
              </VBox>
            </HBox>
          </CustomListItem>
        </items>

      </List>
    </content>
  </Page>

</mvc:View>
