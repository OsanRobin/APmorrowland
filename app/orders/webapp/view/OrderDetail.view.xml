<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form"
  controllerName="apm.orders.controller.OrderDetail">

  <Page
    title="Order detail"
    showNavButton="true"
    navButtonPress="onBack">

    <content>

    
      <ObjectHeader
        title="{= ${customer/name} || 'Onbekende klant' }"
        number="{total}"
        numberUnit="EUR">

        <attributes>
          <ObjectAttribute title="Ordertype" text="{type}" />
          <ObjectAttribute title="Orderdatum" text="{orderDate}" />
        </attributes>

        <statuses>
          <ObjectStatus
            text="{status}"
            state="{= ${status} === 'PAID' ? 'Success' : (${status} === 'CANCELLED' ? 'Error' : 'Warning') }" />
        </statuses>
      </ObjectHeader>

    
      <Table
        inset="false"
        headerText="Items"
        items="{ path: 'items' }">

        <columns>
          <Column width="40%">
            <Text text="Naam" />
          </Column>
          <Column hAlign="End" width="15%">
            <Text text="Aantal" />
          </Column>
          <Column hAlign="End" width="20%">
            <Text text="Prijs" />
          </Column>
          <Column hAlign="End" width="25%">
            <Text text="Subtotaal" />
          </Column>
        </columns>

        <items>
          <ColumnListItem>
            <cells>
              <Text text="{name}" />
              <Text text="{qty}" />
              <ObjectNumber number="{unitPrice}" unit="EUR" />
              <ObjectNumber number="{lineTotal}" unit="EUR" />
            </cells>
          </ColumnListItem>
        </items>
      </Table>

    
      <Toolbar>
        <ToolbarSpacer />
        <Title text="Totaal:" level="H4" />
        <ObjectNumber number="{total}" unit="EUR" class="sapUiTinyMarginBegin" />
      </Toolbar>

    </content>
  </Page>
</mvc:View>
