<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form"
  controllerName="apm.orders.controller.OrderDetail">

  <Page title="Order detail" showNavButton="true" navButtonPress="onBack">
    <content>
      <form:SimpleForm editable="false" layout="ResponsiveGridLayout">
        <Label text="Klant" />
        <Text text="{customer/name}" />

        <Label text="Orderdatum" />
        <Text text="{orderDate}" />

        <Label text="Type" />
        <Text text="{type}" />

        <Label text="Status" />
        <Text text="{status}" />

        <Label text="Totaal" />
        <Text text="{total}" />
      </form:SimpleForm>
    </content>
  </Page>
</mvc:View>
